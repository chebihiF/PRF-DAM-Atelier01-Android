<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/username_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:hint="Enter username" />

    <EditText
        android:layout_below="@id/username_txt"
        android:layout_alignRight="@id/username_txt"
        android:layout_alignLeft="@id/username_txt"
        android:layout_marginTop="20dp"
        android:id="@+id/password_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:hint="Enter password" />

    <Button
        android:layout_marginLeft="10dp"
        android:layout_alignLeft="@id/password_txt"
        android:layout_below="@id/password_txt"
        android:id="@+id/btn_logIN"
        android:text="Login"
        android:layout_width="150dp"
        android:layout_height="wrap_content" />

    <Button
        android:layout_marginRight="10dp"
        android:layout_alignRight="@id/password_txt"
        android:layout_below="@id/password_txt"
        android:id="@+id/btn_cancel"
        android:text="Cancel"
        android:layout_width="150dp"
        android:layout_height="wrap_content" />


</RelativeLayout>